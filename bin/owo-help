SOURCE="${BASH_SOURCE[0]}"
cd -P "$( dirname "$SOURCE" )"/..
DIR="$( pwd )"

echo -e "\OwO is your open source voice assistant.  Full source"
echo "can be found at: ${DIR}"
echo
echo "owo-specific commands you can use from the Linux command prompt:"
echo "  owo-cli-client       command line client, useful for debugging"
echo "  owo-msm              OwO Skills Manager, to manage your Skills"
echo "  owo-msk              OwO Skills Kit, create and share Skills"
echo
echo "Scripting Utilities:"
echo "  owo-speak <phr>      have OwO speak a phrase to the user"
echo "  owo-say-to <utt>     send an utterance to OwO as if spoken by a user"
echo
echo "OwO's Python Virtual Environment (venv) control:"
echo "  owo-venv-activate    enter the venv"
echo "  owo-venv-deactivate  exit the venv"
echo "  owo-pip              install a Python package within the venv"
echo
echo "Other:"
echo "  owo-mic-test         record and playback to directly test microphone"
echo "  owo-help             display this message"
echo
echo "For more information, see https://OwO.ai and https://github.com/OwOAI"
